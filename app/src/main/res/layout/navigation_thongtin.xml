<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background_navigation"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="124dp"
            android:layout_height="98dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:scrollX="10dp"

            android:src="@drawable/icon_avatar"></ImageView>

        <TextView
            android:id="@+id/ten_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Huỳnh Thanh Bình"
            android:textColor="#fff"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/email_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="huynhthanhbinhbl@gmail.com"
            android:textColor="#fff"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/trangthaihoatdong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_online"
            android:text="Online"
            android:textColor="#33FF33"
            android:layout_marginBottom="5dp"
            android:paddingTop="18dp"
            android:textStyle="bold"></TextView>


    </LinearLayout>
</LinearLayout>